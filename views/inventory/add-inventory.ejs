<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (messages() && messages().error) { %>
  <div class="error-message">
    <p><%= messages().error %></p>
  </div>
<% } %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div class="add-inventory-form">
  <form id="add-inventory-form" action="/inv/add-inventory" method="post">
    <div class="form-item">
      <label for="classification_id">Classification:</label>
      <%- classifications %>
    </div>
    <div class="form-item">
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" required 
        value="<%= locals.inv_make ? inv_make : '' %>"
        pattern="[A-Za-z0-9\s]+" 
        title="Make must contain only letters, numbers, and spaces">
      <span>Minimum 3 characters, letters and numbers only</span>
    </div>
    <div class="form-item">
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" required 
        value="<%= locals.inv_model ? inv_model : '' %>"
        pattern="[A-Za-z0-9\s]+" 
        title="Model must contain only letters, numbers, and spaces">
      <span>Minimum 3 characters, letters and numbers only</span>
    </div>
    <div class="form-item">
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" required><%= locals.inv_description ? inv_description : '' %></textarea>
      <span>Minimum 10 characters</span>
    </div>
    <div class="form-item">
      <label for="inv_image">Image Path:</label>
      <input type="text" id="inv_image" name="inv_image" required 
        value="<%= locals.inv_image ? inv_image : '/images/vehicles/no-image.png' %>">
    </div>
    <div class="form-item">
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" required 
        value="<%= locals.inv_thumbnail ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>">
    </div>
    <div class="form-item">
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" required 
        value="<%= locals.inv_price ? inv_price : '' %>"
        min="1" step="0.01">
      <span>Numbers only, no commas, minimum price $1</span>
    </div>
    <div class="form-item">
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" required 
        value="<%= locals.inv_year ? inv_year : '' %>"
        min="1950" max="2024" step="1">
      <span>4-digit year, 1950 or newer</span>
    </div>
    <div class="form-item">
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" required 
        value="<%= locals.inv_miles ? inv_miles : '' %>"
        min="0" step="1">
      <span>Numbers only, no commas</span>
    </div>
    <div class="form-item">
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" required 
        value="<%= locals.inv_color ? inv_color : '' %>"
        pattern="[A-Za-z\s]+" 
        title="Color must contain only letters and spaces">
      <span>Letters only, minimum 3 characters</span>
    </div>
    <div class="form-item">
      <button type="submit">Add Vehicle</button>
    </div>
  </form>
  <p><a href="/inv">Return to Management</a></p>
</div>