<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (messages() && messages().success) { %>
  <div class="success-message">
    <p><%= messages().success %></p>
  </div>
<% } else if (messages() && messages().error) { %>
  <div class="error-message">
    <p><%= messages().error %></p>
  </div>
<% } %>

<div class="management-links">
  <h2>Inventory Management</h2>
  <p>Welcome to the inventory management section. Please select an option below:</p>
  <ul>
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
  </ul>
</div>